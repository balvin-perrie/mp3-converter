{
  "manifest_version": 2,
  "version": "0.2.2",
  "name": "MP3 Converter",
  "description": "__MSG_description__",
  "default_locale": "en",
  "permissions": [
    "downloads",
    "storage",
    "contextMenus"
  ],
  "optional_permissions": [
    "*://*/*"
  ],
  "homepage_url": "https://add0n.com/mp3-converter.html",
  "background": {
    "persistent": false,
    "scripts": [
      "background.js"
    ]
  },
  "sandbox": {
    "pages": [
      "data/window/mp3/decoder/index.html"
    ]
  },
  "icons": {
    "16": "data/icons/16.png",
    "19": "data/icons/19.png",
    "32": "data/icons/32.png",
    "38": "data/icons/38.png",
    "48": "data/icons/48.png",
    "64": "data/icons/64.png",
    "128": "data/icons/128.png",
    "256": "data/icons/256.png"
  },
  "offline_enabled": true,
  "browser_action": {
    "default_icon": {
      "16": "data/icons/16.png",
      "19": "data/icons/19.png",
      "32": "data/icons/32.png",
      "38": "data/icons/38.png",
      "48": "data/icons/48.png",
      "64": "data/icons/64.png"
    },
    "theme_icons": [{
      "light": "data/icons/light/16.png",
      "dark": "data/icons/16.png",
      "size": 16
    }, {
      "light": "data/icons/light/19.png",
      "dark": "data/icons/19.png",
      "size": 19
    }, {
      "light": "data/icons/light/32.png",
      "dark": "data/icons/32.png",
      "size": 32
    }, {
      "light": "data/icons/light/38.png",
      "dark": "data/icons/38.png",
      "size": 38
    }, {
      "light": "data/icons/light/48.png",
      "dark": "data/icons/48.png",
      "size": 48
    }, {
      "light": "data/icons/light/64.png",
      "dark": "data/icons/64.png",
      "size": 64
    }]
  }
}
